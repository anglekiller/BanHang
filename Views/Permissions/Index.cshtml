@model IEnumerable<BanHang.Models.Permission>

@{
    ViewData["Title"] = "Index";
}

<h2>Permission</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PermissionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PermissionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PermissionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PermissionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
